#include "stdio.h"





int main() {

////// PROMPT TO RELOOP THE FUNCTION //////

	int prompt = 1;

////// DATA FOR PROGRAM ///////

	int m = 29;

    int* ab = NULL;




	while (1) {

		printf("Continue?");
		fflush(stdin);
		fflush(stdout);
		scanf("%d", &prompt);
		fflush(stdin);
		fflush(stdout);

		if (prompt == 0)
			break;

////// PROGRAM //////

		printf("Address of m : %p\n" , m);
		fflush(stdin);fflush(stdout);

		printf("Value of m : %d\n" , m);
		fflush(stdin);fflush(stdout);

		ab = &m;






	}

	return 0;
}
