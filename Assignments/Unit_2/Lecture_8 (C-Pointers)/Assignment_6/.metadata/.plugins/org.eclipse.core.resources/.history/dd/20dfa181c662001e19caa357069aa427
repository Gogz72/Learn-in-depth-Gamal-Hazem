#include "stdio.h"





int main() {

////// PROMPT TO RELOOP THE FUNCTION //////
	int prompt = 1;

////// DATA FOR PROGRAM ///////
    int* Ptest = NULL;


	while (1) {

		printf("Continue?");
		fflush(stdin);
		fflush(stdout);
		scanf("%d", &prompt);
		fflush(stdin);
		fflush(stdout);

		if (prompt == 0)
			break;


	}

	return 0;
}
