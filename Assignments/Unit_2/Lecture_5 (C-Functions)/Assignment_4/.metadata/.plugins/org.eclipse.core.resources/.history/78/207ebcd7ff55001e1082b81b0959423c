	void main() {
		int prompt = 1;
		int x;

		while (1) {

			printf("Continue?");
			fflush(stdin);
			fflush(stdout);
			scanf("%d", &prompt);
			fflush(stdin);
			fflush(stdout);

			if (prompt == 0)
				break;

			printf("Enter a positive integer:  ");
			fflush(stdin);
			fflush(stdout);
			scanf("%d", &x);
			fflush(stdin);
			fflush(stdout);
			printf("Factorial of %d = %d \n" , x ,factorial(x));

		}

	}

