#include "stdio.h"
#include "strings.h"


struct Sstudent read_data ();

struct Sstudent
{
	char name [50];

	short roll_no;

	float marks;

};



struct Sstudent read_data ()
{
	struct Sstudent student;

	printf("Enter first name:");
	fflush(stdin);fflush(stdout);

	scanf("%s" , &student.name);
	fflush(stdin);fflush(stdout);






}

int main ()
{

	int prompt = 1;

		while (1) {

			printf("\nContinue?");
			fflush(stdin);
			fflush(stdout);
			scanf("%d", &prompt);
			fflush(stdin);
			fflush(stdout);

			if (prompt == 0)
				break;
		}


return 0;
}


