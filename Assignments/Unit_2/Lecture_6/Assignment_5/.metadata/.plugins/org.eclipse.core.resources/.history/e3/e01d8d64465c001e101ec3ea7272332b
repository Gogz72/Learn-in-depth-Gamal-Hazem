#include "stdio.h"
#include "strings.h"

int main ()
{

	int prompt = 1;

		while (1) {

			printf("\nContinue?");
			fflush(stdin);
			fflush(stdout);
			scanf("%d", &prompt);
			fflush(stdin);
			fflush(stdout);

			if (prompt == 0)
				break;
		}


return 0;
}


