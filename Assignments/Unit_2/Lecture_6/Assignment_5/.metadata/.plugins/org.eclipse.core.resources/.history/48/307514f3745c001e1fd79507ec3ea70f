#include <stdio.h>

#define PI 3.14159
#define AREA(r) (PI * (r) * (r))

int main() {
    double radius;

    printf("Enter the radius of the circle: ");
    fflush(stdin);fflush(stdout);

    scanf("%lf", &radius);
    fflush(stdin);fflush(stdout);

    double area = AREA(radius);

    printf("The area of the circle is: %.2lf\n", area);

    return 0;
}
